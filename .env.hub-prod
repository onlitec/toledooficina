# Configurações para PRODUÇÃO usando Docker Hub
# Para usar: docker-compose -f docker-compose.hub-prod.yml --env-file .env.hub-prod up -d
# IMPORTANTE: Configure todas as variáveis antes do deploy!

# Ambiente
ENVIRONMENT=production
FLASK_ENV=production

# Domínio (CONFIGURE COM SEU DOMÍNIO REAL)
DOMAIN_NAME=seu-dominio.com

# Banco de Dados PostgreSQL (CONFIGURE SENHAS SEGURAS)
POSTGRES_DB=erp_oficina
POSTGRES_USER=erp_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!
DATABASE_URL=postgresql://erp_user:CHANGE_THIS_SECURE_PASSWORD_123!@postgres:5432/erp_oficina

# Cache Redis (CONFIGURE SENHA SEGURA)
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_456!@redis:6379/0

# Segurança (GERE CHAVES SEGURAS)
# Use: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_SECRET_KEY_GENERATE_WITH_OPENSSL
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_GENERATE_WITH_OPENSSL

# Caminhos de dados (produção)
DATA_PATH=/opt/erp-oficina/data

# Configurações de E-mail (CONFIGURE PARA PRODUÇÃO)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app
MAIL_DEFAULT_SENDER=seu-email@gmail.com

# Configurações de Backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Logs e Monitoramento
LOG_LEVEL=INFO
ENABLE_DEBUG_TOOLBAR=false

# Configurações de produção
AUTO_RELOAD=false
HOT_RELOAD=false
DEBUG_MODE=false

# SSL/HTTPS (se usando certificados próprios)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem