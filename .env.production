# Configuração de Produção - ERP Oficina Mecânica
# IMPORTANTE: Este arquivo contém informações sensíveis
# Mantenha-o seguro e nunca o commite no repositório

# =============================================================================
# CONFIGURAÇÕES GERAIS
# =============================================================================
ENVIRONMENT=production
DOMAIN_NAME=localhost
DATA_PATH=./data

# =============================================================================
# SEGURANÇA - GERE CHAVES SEGURAS ANTES DO DEPLOY
# =============================================================================
# Use: openssl rand -hex 32
SECRET_KEY=prod_secret_key_12345_change_me
JWT_SECRET_KEY=prod_jwt_secret_key_12345_change_me

# =============================================================================
# BANCO DE DADOS POSTGRESQL
# =============================================================================
POSTGRES_DB=erp_oficina_prod
POSTGRES_USER=erp_user_prod
# Use: openssl rand -base64 32
POSTGRES_PASSWORD=postgres_password_12345_change_me

# =============================================================================
# REDIS CACHE
# =============================================================================
# Use: openssl rand -base64 32
REDIS_PASSWORD=redis_password_12345_change_me

# =============================================================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app
MAIL_DEFAULT_SENDER=seu-email@gmail.com

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Todo dia às 2h da manhã

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# =============================================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =============================================================================
WORKER_PROCESSES=2
WORKER_CONNECTIONS=1000
MAX_REQUESTS_PER_WORKER=1000
WORKER_TIMEOUT=30

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA ADICIONAL
# =============================================================================
SESSION_TIMEOUT=3600  # 1 hora
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900  # 15 minutos
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=True

# =============================================================================
# CONFIGURAÇÕES DE UPLOAD
# =============================================================================
MAX_FILE_SIZE=16777216  # 16MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=/app/uploads

# =============================================================================
# CONFIGURAÇÕES DE RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# CONFIGURAÇÕES DE SSL/TLS
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# =============================================================================
# CONFIGURAÇÕES DE TIMEZONE
# =============================================================================
TZ=America/Sao_Paulo

# =============================================================================
# CONFIGURAÇÕES DE CORS
# =============================================================================
CORS_ORIGINS=https://seu-dominio.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Authorization,Content-Type,X-Requested-With

# =============================================================================
# CONFIGURAÇÕES DE CACHE
# =============================================================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=erp_oficina_

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_FILE_BACKUP_COUNT=5

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO DE SAÚDE
# =============================================================================
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60

# =============================================================================
# CONFIGURAÇÕES DE RECURSOS
# =============================================================================
# Limites de memória e CPU para containers
BACKEND_MEMORY_LIMIT=1G
BACKEND_CPU_LIMIT=0.5
FRONTEND_MEMORY_LIMIT=512M
FRONTEND_CPU_LIMIT=0.25
NGINX_MEMORY_LIMIT=256M
NGINX_CPU_LIMIT=0.25

# =============================================================================
# CONFIGURAÇÕES DE BACKUP AUTOMÁTICO
# =============================================================================
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=seu-bucket-s3
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=sua-access-key
AWS_SECRET_ACCESS_KEY=sua-secret-key

# =============================================================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
TELEGRAM_BOT_TOKEN=seu-bot-token
TELEGRAM_CHAT_ID=seu-chat-id

# =============================================================================
# CONFIGURAÇÕES DE ANALYTICS (OPCIONAL)
# =============================================================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
HOTJAR_ID=XXXXXXX

# =============================================================================
# CONFIGURAÇÕES DE CDN (OPCIONAL)
# =============================================================================
CDN_URL=https://cdn.seu-dominio.com
CDN_ENABLED=false

# =============================================================================
# CONFIGURAÇÕES DE FIREWALL
# =============================================================================
ALLOWED_IPS=0.0.0.0/0  # Permitir todos (ajuste conforme necessário)
BLOCKED_IPS=  # IPs bloqueados (separados por vírgula)

# =============================================================================
# CONFIGURAÇÕES DE MANUTENÇÃO
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistema em manutenção. Voltaremos em breve.

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO (NÃO USAR EM PRODUÇÃO)
# =============================================================================
# DEBUG=False
# TESTING=False
# DEVELOPMENT=False