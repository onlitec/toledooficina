# Configurações para DESENVOLVIMENTO usando Docker Hub
# Para usar: docker-compose -f docker-compose.hub-dev.yml --env-file .env.hub-dev up -d

# Ambiente
ENVIRONMENT=development
FLASK_ENV=development
FLASK_DEBUG=1

# Domínio (desenvolvimento local)
DOMAIN_NAME=localhost:3000

# Banco de Dados PostgreSQL (desenvolvimento)
POSTGRES_DB=erp_oficina_dev
POSTGRES_USER=erp_user_dev
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=postgresql://erp_user_dev:dev_password_123@postgres:5432/erp_oficina_dev

# Cache Redis (desenvolvimento)
REDIS_PASSWORD=dev_redis_123
REDIS_URL=redis://:dev_redis_123@redis:6379/0

# Segurança (chaves simples para desenvolvimento)
SECRET_KEY=dev_secret_key_123_change_in_production
JWT_SECRET_KEY=dev_jwt_secret_key_123_change_in_production

# Caminhos de dados
DATA_PATH=./data-dev

# Configurações de E-mail (opcional para desenvolvimento)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# Configurações de Backup (desenvolvimento)
BACKUP_RETENTION_DAYS=3
BACKUP_SCHEDULE=0 3 * * *

# Debug e Logs
LOG_LEVEL=DEBUG
ENABLE_DEBUG_TOOLBAR=true

# Configurações específicas do desenvolvimento
AUTO_RELOAD=true
HOT_RELOAD=true
DEBUG_MODE=true