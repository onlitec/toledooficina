# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=oficina_db

# JWT Secret - IMPORTANTE: Usar uma chave segura em produção
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Coolify configuration
COOLIFY_CONTAINER_NAME=erp-oficina
COOLIFY_FQDN=oficina.onlitec.com.br
RANDOM_ID=001

# Variável Pass (se necessária para autenticação)
# Descomente e configure se o erro persistir
# Pass=your-password-here

# React App configuration para produção
REACT_APP_API_URL=https://oficina.onlitec.com.br
REACT_APP_BACKEND_URL=https://oficina.onlitec.com.br

# Configurações adicionais para produção
FLASK_ENV=production
CORS_ORIGINS=https://oficina.onlitec.com.br

# Configurações de segurança
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true